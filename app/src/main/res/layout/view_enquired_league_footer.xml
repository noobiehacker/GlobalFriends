<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/home_page_contacted_container_top_padding"
    android:paddingBottom="@dimen/home_page_contacted_container_bottom_padding"

    >

    <TextView
        android:id="@+id/youHaveEnqurired"
        style="@style/youHaveEnquiredText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/home_page_contacted_text_top_padding"
        android:minLines="2"
        android:paddingLeft="@dimen/home_page_contacted_container_left_padding"
        android:paddingRight="@dimen/home_page_contacted_container_right_padding"
        android:text="@string/home_page_text_4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/youHaveEnqurired"
        android:src="@drawable/onboarding_arrow_left" />

</RelativeLayout>