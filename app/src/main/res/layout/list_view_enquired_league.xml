<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:layout_alignParentTop="true"
        android:background="@color/gray_light_two"></View>

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/enquired_list_icon_left_padding"
        android:layout_marginRight="@dimen/enquired_list_icon_right_padding"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:background="@drawable/rounded"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/enquired_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/image_container_border"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/place_holder_league" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enquired_list_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/enquired_list_text_bottom_padding"
        android:layout_marginTop="@dimen/enquired_list_text_top_padding"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/enquired_list_text_left_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leagueTitleText"
            style="@style/enquiredLeagueTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/enquired_list_text_middle_margin"
            android:paddingRight="@dimen/enquired_list_text_right_padding"
            android:maxLines="1"
            android:text="@string/place_holder_sport" />

        <TextView
            android:id="@+id/leagueDateText"
            style="@style/enquiredLeagueDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leagueTitleText"
            android:text="@string/place_holder_sport" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/enquired_list_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/enquired_list_arrow_right_padding"
        android:src="@drawable/arrow" />

</RelativeLayout>

