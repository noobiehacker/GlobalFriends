<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_dark_three"
    >
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userProfileImage"
            android:layout_width="@dimen/circle_image_diameter"
            android:layout_height="@dimen/circle_image_diameter"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/place_holder_profile"
            android:focusable="false"
            app:border_color="@color/black"
            app:border_width="2dp"
            />

        <TextView
            android:id="@+id/leagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userProfileImage"
            android:layout_marginTop="@dimen/spacing_smallest"
            android:text="@string/place_holder_player_name"
            android:textIsSelectable="false"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            style="@style/whiteBigText"/>

    </RelativeLayout>

</RelativeLayout>
