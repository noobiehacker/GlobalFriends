<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fixtureGetDirectionContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googleMapFragment"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_light_two"
        android:padding="@dimen/list_divider_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/fixtureGetDirectionText"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fixture_page_get_direction_top_padding"
                android:layout_marginBottom="@dimen/fixture_page_get_direction_bottom_padding"
                android:gravity="center"
                android:text="@string/fixture_page_get_direction"
                style="@style/fixturePageGetDirectionText"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>




