<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include android:id="@+id/app_bar" 
        layout="@layout/app_tool_bar" 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        />

    <include android:id="@+id/search_bar" 
        layout="@layout/view_search_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_marginTop="@dimen/spacing_normal"
        />
    
    <TextView
        android:id="@+id/enquired_league_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:text="@string/home_page_text_1"
        android:layout_marginLeft="@dimen/spacing_normal"
        style="@style/grayLightMediumText"/>
    
    <include android:id="@+id/enquired_league"
        layout="@layout/list_view_item_league"
        android:layout_below="@id/enquired_league_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spacing_normal"
        />
</RelativeLayout>
