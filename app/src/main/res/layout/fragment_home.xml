<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_one"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/league_image_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical" 
                >
                <TextView
                    android:id="@+id/enquired_league_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_page_enquired_left"
                    android:layout_marginTop="@dimen/home_page_enquired_top"
                    android:layout_marginBottom="@dimen/home_page_enquired_bottom"
                    android:text="@string/home_page_text_1"
                    style="@style/enquiredLeagueText"
                    />
                </LinearLayout>

        </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/spacing_sides"
        android:paddingRight="@dimen/spacing_sides"
        android:layout_below="@+id/app_bar"
        
        >

        <TextView
            android:id="@+id/noEnquiredTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/searchResultsNoResult"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minLines="2"
            android:text="@string/home_page_text_3"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
