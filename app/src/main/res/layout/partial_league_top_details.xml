<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leagueBottomDetailsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/league_join_title"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:text="@string/league_page_subtitle_1"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        style="@style/blackMediumText"/>

    <TextView
        android:id="@+id/league_join_details"
        android:layout_below="@+id/league_join_title"
        android:textColor="@color/gray_dark_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:text="@string/league_page_text_1"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        style="@style/grayDarkMediumText"/>
    
</RelativeLayout>
