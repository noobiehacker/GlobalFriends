<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/joinAsPlayerButton"
        style="@style/yellowButton"
        android:layout_width="@dimen/yellow_button_width"
        android:layout_height="@dimen/yellow_button_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/place_holder_join_as_player" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joinAsPlayerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_smallest"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticFromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/static_text_from"
            android:textColor="@color/gray_light_one"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder_price_two"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</RelativeLayout>