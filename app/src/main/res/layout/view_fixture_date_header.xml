<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateTextContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dateTextField"
        style="@style/schedulePageDateHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_section_title_top"
        android:layout_marginBottom="@dimen/spacing_section_title_bottom"
        android:layout_centerHorizontal="true"
        android:text="SATURDAY, 25 FEB" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:background="@color/gray_light_two"
        android:layout_below="@id/dateTextField"></View>

</RelativeLayout>

