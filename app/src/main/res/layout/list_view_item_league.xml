<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/league_image_holder"
        layout="@layout/view_league_image_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_league_image_height"
        android:layout_alignParentTop="true" />
    
    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_length_league_bottom"
        android:layout_below="@id/league_image_holder"
        android:background="@color/yellow">
        
    </View>
</RelativeLayout>
