<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_light"
    android:orientation="vertical"
    android:padding="1dp">

    <RelativeLayout
        android:id="@+id/background_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_white"
        android:orientation="vertical">

        <co.mitoo.sashimi.utils.BabushkaText
            android:id="@+id/leagueMessage"
            style="@style/leagueStatusTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/competition_tab_header_inner_vertical_padding"
            android:paddingLeft="@dimen/competition_tab_header_inner_horizontal_padding"
            android:paddingRight="@dimen/competition_tab_header_inner_horizontal_padding"
            android:paddingTop="@dimen/competition_tab_header_inner_vertical_padding"
            android:text="@string/competition_page_league_message_prefix" />

    </RelativeLayout>
</RelativeLayout>