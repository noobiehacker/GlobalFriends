<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_confirm_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/confirmBackgroundConatiner"
        layout="@layout/partial_league_static_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:paddingBottom="@dimen/confirmation_page_item_bottom_padding"
        android:paddingLeft="@dimen/confirmation_page_item_left_padding"
        android:paddingRight="@dimen/confirmation_page_item_right_padding"
        android:paddingTop="@dimen/confirmation_page_item_top_padding">

        <include
            android:id="@+id/leagueLogoAndText"
            layout="@layout/partial_confirm_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/confirmAccountCompetitionName"
            style="@style/confirmPageTopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/confirmation_first_page_top_padding"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/leagueLogoAndText"
            android:gravity="center"
            android:visibility="invisible"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirmAccountTopText"
                style="@style/confirmPageTopText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/confirmAccountBottomText"
                style="@style/confirmPageBottomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/confirmAccountTopText"
                android:text="@string/confirmation_page_text_two"
                android:layout_marginTop="@dimen/confirmation_first_page_middle_padding"
                android:minLines="2" />

        </RelativeLayout>

        <Button
            android:id="@+id/confirmJoinButton"
            style="@style/orangeButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gray_button_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/confirmation_page_button_one_text" />

    </RelativeLayout>

</RelativeLayout>