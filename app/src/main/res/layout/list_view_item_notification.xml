<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/notification_page_item_bottom_padding"
        android:layout_marginTop="@dimen/notification_page_item_top_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_text_view"
            style="@style/notificationPageItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/notification_page_item_left_padding" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/notification_switch"
            style="@style/MaterialDesignStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/notification_page_item_right_padding" />
    </RelativeLayout>

    <!--
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_switch"
        android:layout_marginTop="@dimen/notification_page_item_top_padding"
        android:layout_marginRight="@dimen/notification_page_item_right_padding"
        android:layout_marginBottom="@dimen/notification_page_item_bottom_padding"
        android:layout_alignParentRight="true"
        android:track="@drawable/toggle_track"
        android:padding="16dp"/>
        -->
</RelativeLayout>
