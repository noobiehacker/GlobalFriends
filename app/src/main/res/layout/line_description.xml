<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/description_line"
    android:layout_centerInParent="true"
    android:layout_width="@dimen/gray_button_width"
    android:layout_height="@dimen/gray_button_height"
    android:orientation="horizontal">

    <View
        android:layout_height="1px"
        android:layout_width="@dimen/line_length"
        android:background="@color/gray_light_two"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/loginTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/static_text_description"
        android:textColor="@color/black"
        android:textSize="@dimen/font_big"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <View
        android:layout_height="1px"
        android:layout_width="@dimen/line_length"
        android:background="@color/gray_light_two"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>