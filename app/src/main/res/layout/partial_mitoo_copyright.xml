<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mitoo_copy_right"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/mitooLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_mitoo_footer" />
    
    <TextView
        android:id="@+id/mitooLocation"
        android:text = "@string/mitoo_copyright_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:layout_below="@+id/mitooLogo"
        android:layout_centerHorizontal="true"
        android:paddingTop = "@dimen/spacing_smallest"
        style="@style/grayDarkMediumText"/>

    <TextView
        android:id="@+id/mitooVersion"
        android:text = "@string/mitoo_copyright_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mitooLocation"
        android:paddingTop = "@dimen/spacing_smallest"
        android:layout_centerHorizontal="true"
        style="@style/grayDarkMediumText"/>

</RelativeLayout>