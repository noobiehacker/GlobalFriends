<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/leagueImage"
        android:layout_width="@dimen/league_icon_width"
        android:layout_height="@dimen/league_icon_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:src="@drawable/place_holder_league"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded"/>

    <TextView
        android:id="@+id/leagueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leagueImage"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/place_holder_league_name"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        style="@style/whiteBigText"/>

    <TextView
        android:id="@+id/leagueInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leagueName"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="@string/place_holder_league_info"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        style="@style/whiteMediumText"/>

</RelativeLayout>
