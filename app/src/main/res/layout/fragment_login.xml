<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/fragment_login"
    android:layout_height="match_parent"
    android:background="@drawable/bg1" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/loginTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_page_title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold|italic"
            />

        <Button
            android:id="@+id/facebookLoginButton"
            android:layout_width="@dimen/gray_button_width"
            android:layout_height="@dimen/gray_button_height"
            android:text="@string/login_page_text1"
            android:layout_below="@+id/loginTitleText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_smallest"
            android:onClick="facebookButtonLoginAction"
            style="@style/navyBlueButton"
            />

        <include layout="@layout/line_or"
            android:id="@+id/orLine"
            android:layout_below="@+id/facebookLoginButton"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/gray_button_width"
            android:layout_height="@dimen/gray_button_height"
            android:layout_marginTop="@dimen/spacing_smallest"/>

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="@dimen/gray_button_width"
            android:layout_height="@dimen/gray_button_height"
            android:hint="@string/login_page_text3"
            android:layout_below="@+id/orLine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_smallest"
            style="@style/whiteEditText"
            />

        <include layout="@layout/view_password_edit_text"
            android:id="@+id/loginPasswordInput"
            android:layout_width="@dimen/gray_button_width"
            android:layout_height="@dimen/gray_button_height"
            android:layout_below="@+id/emailInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_smallest"
            />


        <Button
            android:id="@+id/loginButton"
            android:layout_width="@dimen/gray_button_width"
            android:layout_height="@dimen/gray_button_height"
            android:layout_below="@+id/loginPasswordInput"
            android:layout_centerHorizontal="true"
            android:text="@string/login_page_text6"
            android:onClick="loginButtonAction"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/spacing_smallest"
            style="@style/darkGrayButton"
            />

    </RelativeLayout>

</RelativeLayout>
