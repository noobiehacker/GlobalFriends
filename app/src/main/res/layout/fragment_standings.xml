<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_standings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_one"
    android:orientation="vertical">

    <com.github.androidprogresslayout.ProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:progressLayout="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        progressLayout:progress="false"
        progressLayout:progressBackground="@color/gray_light_one">

        <co.mitoo.sashimi.views.widgets.HeaderGridView
            android:id="@+id/standings_grid_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@color/gray_light_three"
            android:dividerHeight="@dimen/list_divider_height">
            </co.mitoo.sashimi.views.widgets.HeaderGridView>

    </com.github.androidprogresslayout.ProgressLayout>

</RelativeLayout>