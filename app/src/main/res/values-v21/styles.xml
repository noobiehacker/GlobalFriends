<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="TranslucentActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@drawable/ab_transparent</item>
    </style>

    <style name="skyBlueButton">
        android:textColor="@color/white"
        android:background="@color/blue_sky"
        android:textSize="@dimen/font_normal"
    </style>

    <style name="navyBlueButton">
        android:textColor="@color/white"
        android:background="@color/blue_navy"
        android:textSize="@dimen/font_normal"
    </style>

    <style name="transparentButton">
        android:textColor="@color/white"
        android:background="@color/transparent"
        android:textSize="@dimen/font_normal"
    </style>
</resources>