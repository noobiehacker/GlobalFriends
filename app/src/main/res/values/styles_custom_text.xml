<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- League Page -->
    <style name="leagueNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="leagueCityText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
        <item name="android:paddingLeft">@dimen/spacing_smallest</item>
        <item name="android:paddingRight">@dimen/spacing_smallest</item>
    </style>

    <style name="leagueSportText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- League Page -->
    <style name="confirmSuccessText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="confirmDetailsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Settings Page -->

    <style name="settingsUserNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="settingsTitleText">
        <item name="android:textColor">@color/gray_dark_five</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="settingsItemText">
        <item name="android:textColor">@color/gray_dark_two</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="settingsCityWaterMarkText">
        <item name="android:textColor">@color/gray_dark_two</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="settingsVersionWaterMarkText">
        <item name="android:textColor">@color/gray_light_seven</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="searchResultsNoResult">
        <item name="android:textColor">@color/gray_dark_five</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Home Page -->
    <style name="enquiredLeagueText">
        <item name="android:textColor">@color/gray_dark_one</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Home Page List View-->

    <style name="enquiredLeagueTitleText">
        <item name="android:textColor">@color/gray_dark_five</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="enquiredLeagueDateText">
        <item name="android:textColor">@color/gray_light_six</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="youHaveEnquiredText">
        <item name="android:textColor">@color/gray_dark_one</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Feedback Page -->

    <style name="feedbackMessageText">
        <item name="android:textColor">@color/gray_dark_three</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="feedbackItemText">
        <item name="android:textColor">@color/gray_dark_two</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>